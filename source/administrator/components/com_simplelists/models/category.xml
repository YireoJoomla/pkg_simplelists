<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params">
        <fieldset name="details">
            <field name="show_category_title" type="list" default="" label="Category Title" description="PARAM CATEGORY TITLE">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_category_description" type="list" default="" label="Category Description" description="PARAM CATEGORY DESCRIPTION">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_category_image" type="list" default="" label="Category Image" description="PARAM CATEGORY IMAGE">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="layout" type="list" default="" label="Layout" description="PARAM CATEGORY IMAGE">
                <option value="">Use global</option>
                <option value="basic">Basic</option>
                <option value="default">Default</option>
                <option value="hover">Hover</option>
                <option value="picture">Picture</option>
                <option value="raw">Raw</option>
                <option value="select">select</option>
                <option value="table">table</option>
                <option value="toggle">toggle</option>
            </field>
        </fieldset>

        <fieldset name="metadata">
            <field name="description" type="textarea" rows="5" cols="30" default="" label="Description" description="METADESC" />
            <field name="keywords" type="textarea" rows="5" cols="30" default="" label="Keywords" description="METAKEYS" />
            <field name="author" type="text" size="20" default="" label="Author" description="METAAUTHOR" />
        </fieldset>

        <fieldset name="layout">
            <field name="orderby" type="list" default="" label="Ordering" description="PARAM ORDERING">
                <option value="">Use global</option>
                <option value="order">Ordering</option>
                <option value="rorder">Reverse Ordering</option>
                <option value="rdate">Oldest first</option>
                <option value="date">Most recent first</option>
                <option value="alpha">Title Alphabetical</option>
                <option value="ralpha">Title Reverse-Alphabetical</option>
                <option value="random">Random</option>
            </field>
            <field type="spacer" default="&lt;h3 style='background-color:white;padding:5px;border:1px solid red;'&gt;Layout specific&lt;/h3&gt;" />
            <field name="show_totop" type="list" default="" label="To top" description="PARAM TOTOP">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="totop_image" type="imagelist" default="" label="To top image" directory="images/simplelists" hide_default="1" description="PARAM TOTOP IMAGE" />
            <field name="totop_text" type="text" default="" label="To top text" description="PARAM TOTOP IMAGE" />

            <field type="spacer" default="&lt;h3 style='background-color:white;padding:5px;border:1px solid red;'&gt;Styling&lt;/h3&gt;" />
            <field name="load_lightbox" type="list" default="" label="Load Lightbox" description="PARAM LIGHTBOX">
                <option value="">Use global</option>
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field name="load_css" type="list" default="" label="Load default CSS" description="PARAM DEFAULTCSS">
                <option value="">Use global</option>
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field name="load_js" type="list" default="" label="Load default JS" description="PARAM DEFAULTJS">
                <option value="">Use global</option>
                <option value="0">No</option>
                <option value="1">Yes</option>
            </field>
            <field type="spacer" default="&lt;h3 style='background-color:white;padding:5px;border:1px solid red;'&gt;Pagination&lt;/h3&gt;" />
            <field name="use_pagination" type="list" default="" label="Use pagination" description="PARAM PAGINATION">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="limit" type="text" default="" size="2" maxsize="2" label="Page limit" description="PARAM LIMIT" />
            <field name="show_index" type="list" default="" label="Item index" description="PARAM INDEX">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_alpha_index" type="list" default="" label="Alphabetical index" description="PARAM ALPHA INDEX">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field type="spacer" default="&lt;h3 style='background-color:white;padding:5px;border:1px solid red;'&gt;Hierarchy&lt;/h3&gt;" />
            <field name="show_category_parent" type="list" default="" label="Category Parent" description="PARAM CATEGORY PARENT">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_category_childs" type="list" default="" label="Category Children" description="PARAM CATEGORY CHILDS">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_category_childs_description" type="list" default="" label="Show Child Description" description="">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field type="spacer" default="&lt;h3 style='background-color:white;padding:5px;border:1px solid red;'&gt;Other&lt;/h3&gt;" />
            <field name="show_header_modules" type="list" default="" label="Header modules" description="PARAM HEADER MODULES">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_footer_modules" type="list" default="" label="Footer modules" description="PARAM FOOTER MODULES">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_feed" type="list" default="" label="RSS/Atom feeds" description="PARAM FEED">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_empty_list" type="list" default="" label="No Items Found" description="PARAM DEFAULTJS">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_pdf_icon" type="list" default="" label="PDF icon" description="PARAM PDFICON">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="show_print_icon" type="list" default="" label="Print icon" description="PARAM PRINTICON">
                <option value="">Use global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
        </fieldset>
    </fields>
</form>
