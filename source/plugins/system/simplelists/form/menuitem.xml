<form>
    <fields name="request">
        <fieldset name="request">
            <field name="category_id" type="category" extension="com_simplelists" default="0" required="false" label="COM_SIMPLELISTS_CATEGORY" description="COM_SIMPLELISTS_CATEGORY_DESC">
                <option value="0">JNONE</option>
            </field>
            <field name="alt_layout" type="componentlayout"
                label="JFIELD_ALT_LAYOUT_LABEL"
                description="JFIELD_ALT_COMPONENT_LAYOUT_DESC"
                useglobal="true"
                extension="com_simplelists" view="items"
            />
        </fieldset>
    </fields>
    <fields name="params">
        <fieldset name="styling">
            <field name="layout_type" type="list"
                   label="COM_SIMPLELISTS_LAYOUT_TYPE"
                   description="COM_SIMPLELISTS_LAYOUT_TYPE_DESC"
                    >
                <option value="legacy">Legacy</option>
                <option value="bootstrap2">Bootstrap 2</option>
                <!--<option value="bootstrap3">Bootstrap 3</option>-->
            </field>
        </fieldset>
    </fields>
</form>
