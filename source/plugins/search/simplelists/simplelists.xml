<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
    <name>PLG_SEARCH_SIMPLELISTS</name>
    <author>Yireo</author>
    <creationDate>October 2013</creationDate>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>info@yireo.com</authorEmail>
    <authorUrl>https://www.yireo.com/</authorUrl>
    <version>1.6.2</version>
    <description>PLG_SEARCH_SIMPLELISTS_DESC</description>

    <files>
        <filename plugin="simplelists">simplelists.php</filename>
        <filename>index.html</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return" />
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="plg_search_simplelists">http://www.yireo.com/updates/plg_search_simplelists.xml</server>
    </updateservers>
</extension>
